@model DemoIdentity.AccessManager.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edição de Role";
}

<h1>Edição de Role</h1>

<hr />

<form asp-action="EditRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Nome" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input type="submit" value="Atualizar" class="btn btn-success" />
        <a asp-controller="Admin" asp-action="ListRoles" class="btn btn-warning">Cancelar</a>
    </div>
</form>




<div class="card">
    <div class="card-header">
        <h3>Usuários na Role: @ViewBag.role</h3>
    </div>
    <div class="card-body">
        @if (Model.Usuarios.Any())
        {
            foreach (var user in Model.Usuarios)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">Nenhum usuários cadastrado nesta Role</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="Admin" asp-action="EditUsersInRole" 
           asp-route-roleId="@Model.Id" class="btn btn-success">Adicionar ou Remove Usuários</a>
    </div>
</div>



